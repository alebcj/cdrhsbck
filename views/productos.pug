doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
  title Cargar Producto
.container
  form#form(action='/productos' method='POST' enctype='application/x-www-form-urlencoded')
    h2(style='margin-top:40px;') Alta de Productos
    br
    .mb-3
      label.form-label(for='title') Nombre producto: 
      input#title.form-control(type='text' name='title')
    .mb-3
      label.form-label(for='price') Precio: 
      input.form-control(type='number' name='price')
    .mb-3
      label.form-label(for='thumbnail') URL Imagen: 
      input.form-control(type='text' name='thumbnail')
    button.btn.btn-success.mb-3(type='submit') Agregar
.container(style='margin-top:40px;')
if (products.length > 0)
  table.table.table-striped
    thead
      tr
        th(scope='col') ID
        th(scope='col') Nombre
        th(scope='col') Precio
        th(scope='col') Im&aacute;gen
        th
    tbody
      each prod in products
        tr
          th=prod.id 
          td=prod.title
          td=prod.price
          td
            img(src=prod.thumbnail style='height: 40px;')
          td
            button.btn.btn-outline-dark(type='button' onclick='deleteRow(this)')
              i.bi.bi-trash
              |  Eliminar
else 
    h3='No se encontraron productos'






script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
script(src='./js/utils.js')
